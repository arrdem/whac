<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/spellTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="Boundless charge"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellCost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellRange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellAOE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellPOW"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellUP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

    <TextView
        android:id="@+id/spellOFF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="*"
        android:textColor="@color/Black"
        android:textSize="@dimen/textview_small_height" />

</TableRow>